<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Family Member</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white font-sans flex flex-col items-center justify-center min-h-screen">

  <h1 class="text-3xl font-bold mb-6">Add a Family Member</h1>

  <% if (error) { %>
    <div class="mb-4 text-red-400 font-semibold"><%= error %></div>
  <% } %>

  <form action="/new" method="post" class="bg-gray-800 p-6 rounded-lg shadow-md w-96">
    <p class="mb-2">What's your name?</p>
    <input type="text" name="name" maxlength="15" required
      class="w-full px-4 py-2 rounded-lg text-black focus:outline-none focus:ring-2 focus:ring-indigo-500 mb-6" />

    <p class="mb-2">Pick a color:</p>
    <div class="flex flex-wrap gap-3 mb-6">
      <% const colors = ["red","green","yellow","orange","teal","blue","violet","purple","pink","powderblue"]; %>
      <% colors.forEach(c => { %>
        <label class="w-8 h-8 rounded-full cursor-pointer border-2 border-transparent hover:scale-110 transition flex items-center justify-center"
          style="background-color:<%= c %>;">
          <input type="radio" name="color" value="<%= c %>" class="hidden peer" required />
          <span class="sr-only"><%= c %></span>
        </label>
      <% }) %>
    </div>

    <button type="submit"
      class="w-full py-2 bg-indigo-600 hover:bg-indigo-700 rounded-lg text-white font-medium shadow-md">
      Add
    </button>
  </form>

  <div class="mt-8 w-full max-w-md">
    <h3 class="text-lg font-bold mb-2">Existing Family Members:</h3>
    <% if (users.length === 0) { %>
      <div class="text-gray-400">No family members yet.</div>
    <% } else { %>
      <ul>
        <% users.forEach(function(user) { %>
          <li class="mb-2 flex items-center">
            <span class="inline-block w-4 h-4 rounded-full mr-2" style="background-color:<%= user.color %>;"></span>
            <span><%= user.name %></span>
          </li>
        <% }); %>
      </ul>
    <% } %>
  </div>
</body>
</html>