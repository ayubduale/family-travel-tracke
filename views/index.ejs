<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Travel Tracker</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-900 text-white font-sans min-h-screen flex flex-col items-center p-6">

  <form action="/user" method="post" class="flex flex-wrap gap-3 mb-6">
    <% users.forEach(function(user) { %>
      <button type="submit" name="user" value="<%= user.id %>"
        class="px-4 py-2 rounded-lg font-medium shadow-md"
        style="background-color:<%= user.color %>;">
        <%= user.name %>
      </button>
      <button type="submit" name="delete" value="<%= user.id %>"
        class="ml-2 px-2 py-1 h-1/2 mt-2 rounded bg-red-600 hover:bg-red-700 text-xs font-bold">
        Delete
      </button>
    <% }); %>
    <button type="submit" name="add" value="new"
      class="px-4 py-2 bg-indigo-600 rounded-lg hover:bg-indigo-700 shadow-md">
      Add Family Member
    </button>
  </form>

  <% if (error) { %>
    <div class="mb-4 text-red-400 font-semibold"><%= error %></div>
  <% } %>

  <form action="/add" method="post" class="flex gap-2 mb-6 w-full max-w-md">
    <input type="text" name="country"
      placeholder="Enter country name"
      class="flex-1 px-4 py-2 rounded-lg text-black focus:outline-none focus:ring-2 focus:ring-indigo-500" />

    <button type="submit"
      class="px-4 py-2 rounded-lg text-white shadow-md"
      style="background-color:<%= color %>;">
      Add Country
    </button>
  </form>

  <div class="mb-6 w-full max-w-md">
    <h3 class="text-lg font-bold mb-2">Visited Countries:</h3>
    <% if (visited.length === 0) { %>
      <div class="text-gray-400">No countries added yet.</div>
    <% } else { %>
      <ul>
        <% visited.forEach(function(c) { %>
          <li class="flex items-center justify-between mb-2">
            <span><%= c.country_name %> (<%= c.country_code %>)</span>
            <form action="/delete-country" method="post" style="display:inline;">
              <input type="hidden" name="countryId" value="<%= c.id %>">
              <button type="submit" class="ml-2 px-2 py-1 rounded bg-red-600 hover:bg-red-700 text-xs font-bold">
                Delete
              </button>
            </form>
          </li>
        <% }); %>
      </ul>
    <% } %>
  </div>

  <h2 class="total-count">Total Countries: <%= total %></h2>
  <script>
    const country_codes = "<%= countries %>".split(",")
    country_codes.forEach(code => {
      if (code) {
        const el = document.getElementById(code);
        if (el) el.style.fill = "<%= color %>";
      }
    });
  </script>
</body>
</html>